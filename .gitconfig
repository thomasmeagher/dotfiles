[user]
  name = Tom Meagher
  email = thom.meagher@gmail.com
	signingkey = CB9EF786D308D589

[core]
	excludesfile = /Users/tom/.gitignore
  editor = vim

[color]
  ui = auto

[alias]
  a = add -A
  b = branch
  bd = branch -D
  c = commit -m
  ch = checkout
  chb = checkout -b
  chm = checkout master
  f = fetch
  l = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset" --abbrev-commit
  p = push
  pl = pull
  s = status -s
  st = status --untracked-files=no
  su = status -uno

[push]
  default = simple

[hub]
  default = https

[credential]
  helper = osxkeychain
  
[commit]
	gpgsign = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
