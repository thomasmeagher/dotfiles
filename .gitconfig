[user]
  name = Tom Meagher
  email = thom.meagher@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  editor = subl -n -w
[color]
  ui = auto
[alias]
  a = add -A
  c = commit -m
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  p = push
  s = status -s
[push]
  default = simple
[hub]
  default = https
[credential]
	helper = osxkeychain
